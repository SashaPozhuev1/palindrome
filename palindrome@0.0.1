#include <iostream>
#include <string>
#include <cstring>

using namespace std;

int main()
{
	string stroka;
	getline(cin, stroka);
	int dlina = stroka.size(), b = 0;

	for (int i = 0; i < (dlina / 2); i++) {
	if (stroka[i] == stroka[dlina-1-i]) b += 1;
	}
	
	if (b == (dlina / 2)) cout << "1" << endl;
	else cout << "0" << endl;

	cin.get();
	return 0;
}
